{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "description": "Starter app for Express in Typescript",
  "main": "build/src/index.js",
  "scripts": {
    "build": "rimraf build && cross-env NODE_ENV=production tsc",
    "lint": "eslint **/*.ts --ignore-path .gitignore --ignore-pattern internals/scripts",
    "prettier:fix": "prettier --write src/**/*.{ts,json,md}",
    "start": "nodemon src/index.ts",
    "start:prod": "npm run build && cross-env NODE_ENV=production node build/src/index.js",
    "test": "cross-env NODE_ENV=test jest --watch"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^5.0.3",
    "@types/eslint": "^6.1.2",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.15",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.21",
    "@types/lodash": "^4.14.149",
    "@types/module-alias": "^2.0.0",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.11.1",
    "@types/pg": "^7.14.3",
    "@types/pg-format": "^1.0.0",
    "@types/prettier": "^1.18.3",
    "@types/session-file-store": "^1.2.1",
    "@types/sinon": "^7.5.0",
    "@types/supertest": "^2.0.8",
    "@types/tmp": "0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.3",
    "npm": "^6.14.6",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "async-retry": "^1.3.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-winston": "^4.0.1",
    "helmet": "^3.21.1",
    "http-status": "^1.4.0",
    "lodash": "^4.17.19",
    "module-alias": "^2.2.2",
    "multer": "^1.4.2",
    "pg": "^7.18.2",
    "pg-format": "^1.0.4",
    "reflect-metadata": "^0.1.13",
    "session-file-store": "^1.3.1",
    "tmp": "0.1.0",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "npm run prettier:fix",
      "git add"
    ]
  }
}
